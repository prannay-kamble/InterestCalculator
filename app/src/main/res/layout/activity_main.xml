<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/textViewAmount"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="100dp"
            android:layout_weight="1"
            android:text="Amount" />

        <EditText
            android:id="@+id/editTextAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textViewAmount"
            android:layout_alignTop="@+id/textViewAmount"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textViewYears"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewAmount"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="50dp"

            android:layout_weight="1"
            android:text="Rate" />

        <EditText
            android:id="@+id/editTextYears"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextAmount"
            android:layout_toRightOf="@+id/textViewYears"
            android:layout_alignTop="@+id/textViewYears"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textViewInterest"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewYears"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="50dp"

            android:layout_weight="1"
            android:text="Year" />

        <EditText
            android:id="@+id/editTextRateOfInterest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextYears"
            android:layout_toRightOf="@+id/textViewInterest"
            android:layout_alignTop="@+id/textViewInterest"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/buttonSI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextRateOfInterest"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:text="Simple Interest" />

        <Button
            android:id="@+id/buttonCompoundInterest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/buttonSI"
            android:layout_alignTop="@+id/buttonSI"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:text="Compound Interest" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_below="@+id/buttonSI"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="110dp"
            android:ems="10"
            android:inputType="numberDecimal" />

    </RelativeLayout>
</ScrollView>